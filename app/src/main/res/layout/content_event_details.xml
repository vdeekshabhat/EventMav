<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.deekshabhat.eventmav.EventDetailsActivity"
    tools:showIn="@layout/app_bar_event_details">


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsEventLocation"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/tvDetailsEventDescription" />

    <Button
        android:text="Show in Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buDetailsShare"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:id="@+id/budetailsNavigate" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buDetailsShare"
        android:layout_alignStart="@+id/tvDetailsEventLocation"
        android:layout_marginTop="25dp"
        android:id="@+id/buDetailsRegister" />

    <Button
        android:text="Remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buDetailsRegister"
        android:layout_centerHorizontal="true"
        android:id="@+id/buDetailsRemind" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buDetailsRemind"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:id="@+id/buDetailsCancel" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tvDetailsEventCount"
        android:layout_below="@+id/tvDetailsEventDescription"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:id="@+id/buDetailsShare"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/buDetailsRegister" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetailsEventName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetailsEventTime"
        android:layout_below="@+id/tvDetailsEventDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/tvDetailsEventLocation"
        android:layout_below="@+id/tvDetailsEventTime"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetailsEventDate"
        android:layout_below="@+id/tvDetailsEventName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />
</RelativeLayout>



